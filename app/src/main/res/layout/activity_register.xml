<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_login" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:src="@mipmap/logo"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_bg" />

    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_width="@dimen/input_match"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp36"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo">

        <EditText
            android:id="@+id/et_input_username"
            android:layout_width="@dimen/input_match"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/str_input_username"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/color_text_888888"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/input_match"
            android:layout_height="@dimen/line"
            android:background="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_phone">

        <EditText
            android:id="@+id/et_input_psw"
            android:layout_width="@dimen/input_match"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:hint="@string/str_input_psw"
            android:textColorHint="@color/color_text_888888"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/input_match"
            android:layout_height="@dimen/line"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_verify_code">

        <EditText
            android:id="@+id/et_input_psw_sure"
            android:layout_width="@dimen/input_match"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:hint="@string/str_input_psw_sure"
            android:textColorHint="@color/color_text_888888"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/input_match"
            android:layout_height="@dimen/line"
            android:background="@android:color/white" />
    </LinearLayout>

