<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity">
    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_login"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000"/>
    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_bg"
        android:layout_marginTop="@dimen/dp160"
        android:src="@mipmap/logo"/>
    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_width="@dimen/input_match"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo"
        android:layout_marginTop="@dimen/dp36">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="@dimen/dp120"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <View
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/line"
                android:background="@android:color/white"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_verify_code"
            android:textColor="@android:color/white"
            android:paddingTop="@dimen/dp3"
            android:paddingBottom="@dimen/dp3"
            android:paddingStart="@dimen/dp8"
            android:paddingEnd="@dimen/dp8"
            android:layout_gravity="bottom"
            android:background="@drawable/radius_border_white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_phone"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="vertical">
        <EditText
            android:layout_width="@dimen/input_match"
            android:layout_height="wrap_content"
            android:background="@null"/>
        <View
            android:layout_width="@dimen/input_match"
            android:layout_height="@dimen/line"
            android:background="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_verify_code"
        android:layout_marginTop="@dimen/dp50">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp36"
            android:src="@mipmap/alipay"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>