<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="@dimen/dp85"
        android:layout_height="@dimen/dp85">

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:scaleType="centerCrop"
            android:src="@color/color_f6"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentEnd="true"
            android:gravity="top|end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@mipmap/delete_circle" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp5"
            android:background="@drawable/buybuybuy"
            android:drawableStart="@drawable/video_icon"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:text="@string/zero_time"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_more"
            android:visibility="gone" />
    </RelativeLayout>
</layout>
